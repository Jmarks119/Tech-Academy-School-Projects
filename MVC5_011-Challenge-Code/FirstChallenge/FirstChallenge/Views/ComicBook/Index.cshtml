@model List<FirstChallenge.Models.ComicBook>
@{
    ViewBag.Title = "My Comics";
}

<h2>My Comics</h2>

@foreach (var comicBook in Model)
{
    <h3>@Html.ActionLink(comicBook.ComicTitle, "Detail", new { id = comicBook.ComicBookId})</h3>
    <h4>#@comicBook.EpisodeNumber - @comicBook.EpisodeTitle</h4>
    <p><strong>Starring:</strong> @String.Join(", ", comicBook.Characters.Select(p => p.Name))</p>
}

